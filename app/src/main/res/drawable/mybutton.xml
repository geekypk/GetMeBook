<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#143966" />
            <gradient android:angle="-90" android:startColor="#143966" android:endColor="#143966"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#039BE5" />
            <solid android:color="#143966"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#039BE5" />
            <gradient android:angle="-90" android:startColor="#039BE5" android:endColor="#039BE5" />
        </shape>
    </item>
</selector>